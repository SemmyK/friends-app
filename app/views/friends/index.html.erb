

<% content_for :title, "Friends" %>

<% if @friends.present? %>

    <div id="friends" class="table-responsive container">
      
    <table class="table table-bordered table-striped ">
      <thead class="table-dark ">
        <tr>
          <th scope="col" colspan="2">Name</th>
          <th scope="col" colspan="2">Email</th>
          <th scope="col" colspan="2">Phone</th>
          <th scope="col" colspan="2">Twitter</th>
         
        </tr>
      </thead>
      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td colspan="2">
      <%= link_to "#{friend.first_name} #{friend.last_name}", friend, class: "fw-bold link-dark link-underline-opacity-0 d-block" %>
          </td>
        <td colspan="2">
          <%= friend.email %>
          </td>
          <td colspan="2">
          <%= friend.phone %>
          </td>
          <td colspan="2">
          <%= friend.twitter %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
 <% else %>

    <div class="mx-auto w-50 card text-center p-4 mt-4">
      <h1>No friends to show</h1>
    </div>

<% end %>